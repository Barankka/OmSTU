@using (Html.BeginForm("SearchResult", "users", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-md-10">
            <label for="query">
                <h4>User name</h4> <input type="text" name="name" class="form-control" />
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label for="query">
                <h4>User mail</h4> <input type="text" name="mail" class="form-control" />
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label for="query">
                <h4>About</h4> <input type="text" name="text" class="form-control" />
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label for="query">
                <h4>User status</h4> <input type="checkbox" name="moderate" value="true"class="form-control" />
                <input type="hidden" name="moderate" value="false" class="form-control" />
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Search" class="btn btn-default" />
        </div>
    </div>
}
